        <item name="textOff">@string/switch_off</item>
        <item name="thumbTextPadding">16dip</item>
        <item name="switchMinWidth">60dip</item>
        <item name="switchPadding">10dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00FFFFFF</item>
    </style>
    -->

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right_scale</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right_scale</item>
    </style>

</resources>